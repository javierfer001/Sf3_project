{% extends 'BackEndBundle::index.html.twig' %}

{% block table -%}
    <h1>Product list</h1>
    <a class="btn btn-success"  href="{{ path('popularproduct_new',{id:0}) }}">
        Create Product
    </a>
    <br>
    <br>
    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>Date Start</th>
                <th>Date End</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for popularProduct in popularProducts %}
                <tr>
                    <td>{% if popularProduct.dateStart %}{{ popularProduct.dateStart|date('Y-m-d') }}{% endif %}</td>
                    <td>{% if popularProduct.dateEnd %}{{ popularProduct.dateEnd|date('Y-m-d') }}{% endif %}</td>
                    <td>{{ popularProduct.active }}</td>
                    <td>
                        <ul>
                            <a class="btn btn-success" href="{{ path('popularproduct_new', { 'id': popularProduct.id }) }}">edit</a>
                            <a class="btn btn-danger" href="{{ path('popularproduct_delete', { 'id': popularProduct.id }) }}">Delete</a>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
